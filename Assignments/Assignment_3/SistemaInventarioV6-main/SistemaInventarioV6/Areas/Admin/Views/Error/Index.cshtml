
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Bitácora de errores</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="FiltrarFecha"> <i class="bi bi-calendar"></i> Filtrar por fecha</a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-responsive table-hover display nowrap" cellspacing="0" width="100%">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Codigo</th>
                <th>Fecha</th>
                <th>Descripción</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts {
    <script src="~/js/error.js"></script>
}

