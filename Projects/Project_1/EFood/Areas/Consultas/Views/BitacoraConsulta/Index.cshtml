@model EFood.Modelos.ViewModels.BitacoraConsultaVM

@{
    ViewData["Title"] = "Consultar Bitacora por Línea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="text-primary">Consultar Bitacora</h2>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="filtrarBitacoraFecha" method="post">
            <div class="form-group row">
                <label for="fechaInicio" class="col-sm-3 col-form-label">Fecha Inicio</label>
                <div class="col-sm-9">
                    <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="fechaFin" class="col-sm-3 col-form-label">Fecha Fin</label>
                <div class="col-sm-9">
                    <input type="date" id="fechaFin" name="fechaFin" class="form-control" required />
                </div>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Consultar</button>
            </div>
        </form>
    </div>
</div>

<br />

<div class="p-3 border rounded bg-light text-center">
    <table id="tblProductos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Codigo</th>
                <th>ID Usuario</th>
                <th>Fecha y Hora</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        @if (Model.ListaBitacoras != null)
        {
            @foreach (var bitacora in Model.ListaBitacoras)
            {
                <tr>
                    <td>@bitacora.GetValue(0)</td> <!-- Código -->
                    <td>@bitacora.GetValue(1)</td> <!-- ID Usuario -->
                    <td>@bitacora.GetValue(2)</td> <!-- Fecha y Hora -->
                    <td>@bitacora.GetValue(3)</td> <!-- Descripcion -->
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">@Model.MensajeError</td>
            </tr>
        }
    </table>
</div>
